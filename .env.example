# PostgreSQL Database Configuration
# These are used by docker-compose.yml to set up the database
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DB=surveydb

# Database URL for Prisma
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# For local development (outside Docker): postgresql://myuser:mysecretpassword@localhost:5432/surveydb
# For Docker: postgresql://myuser:mysecretpassword@db:5432/surveydb
DATABASE_URL=postgresql://myuser:mysecretpassword@localhost:5432/surveydb

# Clerk Authentication
# Get these from: https://dashboard.clerk.com/
# 1. Go to your Clerk application
# 2. Navigate to API Keys section
# 3. Copy the keys below
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Next.js Configuration
# API URL for client-side requests
NEXT_PUBLIC_API_URL=http://localhost:3000
